{
  "name": "konnektaro",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:admin": "npm run build:shared:styles && npm run dev --workspace=apps/admin & npm run dev:shared:watch",
    "dev:user": "npm run build:shared:styles && npm run dev --workspace=apps/user & npm run dev:shared:watch",
    "dev:shared": "npm run dev --workspace=packages/shared",
    "dev:shared:watch": "npm run dev:styles --workspace=packages/shared",
    "dev:all": "npm run build:shared:styles && npm run dev:admin & npm run dev:user",
    "dev": "npm run dev:all",

    "build:admin": "npm run build --workspace=apps/admin",
    "build:user": "npm run build --workspace=apps/user",
    "build:shared": "npm run build --workspace=packages/shared",
    "build:shared:styles": "npm run build:styles --workspace=packages/shared",
    "build:all": "npm run build:shared && npm run build:admin && npm run build:user",
    "build": "npm run build:all",
    
    "setup": "npm install && npm run build:shared:styles",

    "lint:admin": "npm run lint --workspace=apps/admin",
    "lint:user": "npm run lint --workspace=apps/user",
    "lint:all": "npm run lint:admin && npm run lint:user",

    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "sync:assets": "node scripts/sync-public-assets.js",
    "postbuild": "node cleanup.js",
    "deploy": "npm run build:all && firebase deploy --only hosting",
    "deploy:user": "npm run build:shared:styles && npm run build:user && firebase deploy --only hosting:konnektaro",
    "deploy:admin": "npm run build:shared:styles && npm run build:admin && firebase deploy --only hosting:konnektaro-admin",
    "deploy:all": "npm run build:all && firebase deploy --only hosting"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.5",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@react-pdf/renderer": "^4.3.0",
    "@types/pdfmake": "^0.2.11",
    "axios": "1.11.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cookies-next": "^6.1.0",
    "firebase": "^11.10.0",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.525.0",
    "next": "15.3.5",
    "next-themes": "^0.4.6",
    "pdfmake": "^0.2.20",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0",
    "react-pdf": "^10.1.0",
    "socket.io-client": "^4.8.1",
    "sonner": "^2.0.7",
    "swr": "^2.3.6",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "eslint": "^9",
    "eslint-config-next": "15.3.5",
    "firebase-tools": "^14.11.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "tailwindcss-animate": "^1.0.7",
    "tw-animate-css": "^1.3.5",
    "typescript": "^5"
  }
}
